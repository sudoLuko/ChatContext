{
  "manifest_version": 3,
  "name": "ChatContext",
  "version": "0.1.0",
  "description": "Export the current ChatGPT thread as a clean transcript or structured JSON.",
  "permissions": ["activeTab", "clipboardWrite"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*", "https://chatgpt.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": { "default_popup": "popup.html" }
}
